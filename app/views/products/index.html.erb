
<% if request.env['PATH_INFO'] != "/users/#{params[:user_id]}/products" %>
  <%= render partial: "browse" %>
  <%= render '/shared/products' %>
<% else %>
  <% @products.each do |product|%>
    <% @product = product %>
    <%= render '/shared/showproduct' %>
    <% if current_user.id == params[:user_id].to_i %>
      <div class="danger"><%= "In Stock: #{@product.inventory}"%></div>
      <%= link_to edit_user_product_path(@user, product), class: 'btn btn-success' do %>
        <i class="glyphicon glyphicon-edit"></i> Edit Product
      <% end %>
      <%= link_to user_product_path(@user, @product.id), class: "btn btn-warning", action: :retire, data: {confirm: 'Are you sure you want to retire this product?',  method: :patch } do %>
      <i class="glyphicon glyphicon-remove"></i> Retire
      <% end %>
      <%= link_to user_product_path(@user, @product.id), class: "btn btn-danger", method: :delete, data: {confirm: 'Are you sure you want to delete this vendor?' } do %>
        <i class="glyphicon glyphicon-trash"></i> Delete
      <% end %>
    <% end %>
  <% end %>
<% end %>
